@model List<ITInventory.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Product", "Create")
    @Html.ActionLink("Create New Kit", "KitCreate")
</p>

@(Html.Kendo().Grid(Model)
.Name("grid")
.Columns(column =>
    {
        column.Bound(c => c.ProductName).Width(50);
        column.Bound(c => c.SKU).Width(50);
        column.Bound(c => c.QtyPerPackage).Width(50);
        column.Bound(c => c.Vendor.Name).Width(50);
        column.Bound(c => c.OnOrder).Width(50);
        column.Bound(c => c.StockLevel).Width(50);
        column.Bound(c => c.IsKit).Width(50);
        column.Bound(c => c.Active).Width(50);
        column.Bound(c => c.LastEditDateTime).Width(50);
        column.Bound(c => c.LastEditUser).Width(50);
        column.Template(@<text>@Html.ActionLink("Edit", "Edit", new { id = item.Id }) | @Html.ActionLink("Details", "Details", new { id = item.Id })</text>).Width(50);
        
    })
    .HtmlAttributes(new { style = "height: 700px;" })
    .Scrollable()
    .Filterable()
    .Groupable()
    .Sortable()
    .Pageable(pageable => pageable
    .Refresh(true)
    .PageSizes(true)
    .ButtonCount(5))

)

