@model IEnumerable<ITInventory.Models.Vendor>

@{
    ViewBag.Title = "Vendors";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@(Html.Kendo().Grid(Model)
.Name("grid")
.Columns(column =>
    {
        column.Bound(c => c.Name);
        column.Bound(c => c.Email);
        column.Bound(c => c.PhoneNumber);
    })
    .HtmlAttributes(new { style = "height: 550px;" })
    .Scrollable()
    .Groupable()
    .Sortable()
    .Pageable(pageable => pageable
    .Refresh(true)
    .PageSizes(true)
    .ButtonCount(5))

)

